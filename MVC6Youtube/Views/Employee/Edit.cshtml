@model MVC6Youtube.Models.Employee


<h1>Edit an Employee</h1>
<form class="p-2 flex-fill bd-highlight" method="post" action="=Edit">
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="EmployeeName" value="@Model.EmployeeName" >
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input asp-for="EmployeeAge" placeholder="Age" value="@Model.EmployeeAge">
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Designation</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Designation" value="@Model.Designation">
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Phone" value="@Model.Phone">
        </div>
    </div>
    <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
