@{
}


<h1>Add an Employee</h1>
<form class="p-2 flex-fill bd-highlight" method="post" action="Add">
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="EmployeeName" >
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input asp-for="EmployeeAge" placeholder="Age">
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Designation</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Designation" value="Developer">
        </div>
    </div>
    <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Phone" value="123123123123">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> 



